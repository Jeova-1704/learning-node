{
  "compilerOptions": {
    "outDir": "./dist",                 // Diretório de saída para os arquivos compilados
    "rootDir": "./src",                 // Diretório raiz dos arquivos de entrada
    "module": "commonjs",               // Módulo do Node.js
    "target": "ES2020",                 // Versão do JavaScript de saída
    "strict": true,                     // Ativa verificações estritas de tipo
    "esModuleInterop": true,            // Suporte para importação de módulos CommonJS
    "skipLibCheck": true,               // Ignora verificações de tipo em declarações de biblioteca
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],              // Inclui todos os arquivos na pasta src
  "exclude": ["node_modules"]           // Exclui arquivos dentro de node_modules
}
